<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="12dp"
tools:context=".developmenteffiency.screens.UserDetailFragment">

<TextView
    android:id="@+id/tvUserDetails"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="User Details"
    android:textSize="18sp"
    android:textAlignment="center"
    android:textColor="?android:textColorSecondary"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<View
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginTop="7dp"
    android:background="@android:color/darker_gray"
    app:layout_constraintTop_toBottomOf="@id/tvUserDetails"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<android.widget.ScrollView
    android:id="@+id/svUserDetails"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toBottomOf="@id/tvUserDetails"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="First Name"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvFirstNameValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="John"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvLastName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Name"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvLastNameValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Doe"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Email"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvEmailValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="john.doe@example.com"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Username"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvUsernameValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="johndoe"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvPhoneValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123-456-7890"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="City"
                android:textColor="#A9A9A9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCityValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Springfield"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvStreet"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Street"
                android:textColor="#A9A9A9"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvStreetValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Elm Street"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Street Number"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvNumberValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="123"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvZipcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zipcode"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvZipcodeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12345"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvlat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Latitude"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvLatitudeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12345"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvLong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Longitude"
                android:textSize="16sp"
                android:textColor="#A9A9A9" />

            <TextView
                android:id="@+id/tvLongitudeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12345"
                android:textSize="16sp"
                android:textColor="?android:textColorSecondary"
                android:gravity="end" />
        </LinearLayout>

    </LinearLayout>
</android.widget.ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
