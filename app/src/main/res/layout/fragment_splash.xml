<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
tools:context=".developmenteffiency.screens.SplashFragment">

<TextView
    android:id="@+id/tvCompose"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Compose"
    android:textSize="45sp"
    android:textStyle="bold"
    android:textColor="#FF00FF"
    android:fontFamily="@raw/iceberg_regular"
    android:layout_marginTop="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:gravity="center" />

<TextView
    android:id="@+id/tvVS"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="VS"
    android:textSize="45sp"
    android:textStyle="bold"
    android:textColor="#FF00FF"
    android:fontFamily="@raw/iceberg_regular"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/tvCompose"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:gravity="center" />

<TextView
    android:id="@+id/tvXML"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="XML"
    android:textSize="45sp"
    android:textStyle="bold"
    android:textColor="#FF00FF"
    android:fontFamily="@raw/iceberg_regular"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/tvVS"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:gravity="center" />

<TextView
    android:id="@+id/tvComposeVersion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="XML Version"
    android:textSize="18sp"
    android:layout_marginTop="30dp"
    app:layout_constraintTop_toBottomOf="@id/tvXML"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:gravity="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
